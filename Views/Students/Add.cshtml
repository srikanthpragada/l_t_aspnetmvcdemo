@model AspNetMVCDemo.Models.AddViewModel

@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/master.cshtml";
}

@section scripts {
   @Scripts.Render("~/bundles/jqueryval")
}

<h2>Add</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div>Name</div>
    @Html.TextBoxFor(m => Model.Student.Name)
    @Html.ValidationMessageFor(m => Model.Student.Name)
    <p></p>
    <div>Email</div>
    @Html.TextBoxFor(m => Model.Student.Email)
    @Html.ValidationMessageFor(m => Model.Student.Email)
    <p></p>
    <div>Course ID</div>
    @Html.DropDownListFor(m => Model.Student.Course, Model.Courses)
    <p></p>
    <input type="submit" value="Add Student" />
}


